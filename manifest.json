{
  "name": "Mouse Block",
  "description": "Prevents use of a mouse or touchpad, to encourage testing keyboard navigation.",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "action": {
    "default_title": "Mouse Block",
    "default_icon": {
      "64": "mouse-block.png"
    }
  },
  "icons": {
    "64": "mouse-block.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/",
        "http://*/"
      ],
      "js": ["content.js"]
    }
  ]
}
